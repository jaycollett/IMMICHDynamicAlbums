# Immich API Configuration
IMMICH_API_KEY=your-api-key-here
IMMICH_BASE_URL=https://your-immich-host.com/api

# Application Configuration
SLEEP_INTERVAL_SECONDS=3600
LOG_LEVEL=INFO

# Timezone Configuration
# Default timezone for recurring rules (IANA timezone name)
# Examples: America/New_York, America/Los_Angeles, Europe/London, UTC
# This can be overridden per-rule in config.yaml
DEFAULT_TIMEZONE=America/New_York

# Album Sharing
# Share newly created albums with all users on the Immich instance
# When enabled, albums will be visible to all logged-in users (as viewers)
# Options: true, false (default: false)
SHARE_WITH_ALL_USERS=false

# Share albums with specific users (comma-separated email addresses)
# Example: SHARE_USER_IDS="user1@example.com,user2@example.com,user3@example.com"
# Notes:
#  - Takes precedence if SHARE_WITH_ALL_USERS is false
#  - Per-rule 'share_with' in config.yaml overrides this global setting
#  - Owner is automatically excluded from sharing
#  - Sharing is updated on existing albums every sync run
SHARE_USER_IDS=
